.accounting-widget {
  margin: 20px 0;
}

/* 新增：筛选器样式 */
.accounting-filters {
  display: flex;
  justify-content: flex-start; /* 靠左对齐 */
  align-items: center;
  gap: 10px; /* 元素之间的间距 */
  margin-bottom: 20px;
  flex-wrap: wrap; /* 在小屏幕上自动换行 */

  select, button {
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px; /* 圆角 */
    background-color: #fff;
    font-size: 14px;
    cursor: pointer;
    transition: border-color 0.2s, box-shadow 0.2s;

    &:hover {
      border-color: #ccc;
    }

    &:focus {
      outline: none;
      border-color: #222; /* 可以换成你主题的主色调 */
      box-shadow: 0 0 5px rgba(34, 34, 34, 0.2);
    }
  }

  button {
    background-color: #f2f2f2;
    font-weight: bold;
    
    &:hover {
      background-color: #e8e8e8;
    }
  }
}

.accounting-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 15px;
  font-size: 16px;
}

.accounting-table {
  width: 100%;
  border-collapse: collapse;
}

.accounting-table th,
.accounting-table td {
  border: 1px solid #ddd;
  padding: 8px;
  text-align: center;
}

.accounting-table thead {
  background-color: #f2f2f2;
}

/* 可以进一步根据NexT主题的颜色变量调整，使风格更统一 */

.sidebar-subscribe {
  margin: 20px 0;
  padding: 15px;
  background: var(--card-bg-color);
  border-radius: 8px;
  box-shadow: 0 2px 8px var(--card-shadow-color);
}

.sidebar-subscribe-title {
  margin: 0 0 8px 0;
  font-size: 16px;
  font-weight: 600;
  color: var(--text-color);
}

.sidebar-subscribe-desc {
  margin: 0 0 12px 0;
  font-size: 13px;
  color: var(--text-color);
  opacity: 0.8;
}

.subscribe-form {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

#subscriber-email {
  padding: 8px 12px;
  border: 1px solid var(--border-color);
  border-radius: 4px;
  font-size: 14px;
  background: var(--body-bg-color);
  color: var(--text-color);
}

.subscribe-button {
  padding: 8px 12px;
  background: var(--btn-default-bg);
  color: var(--btn-default-color);
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
  transition: background 0.3s ease;
}

.subscribe-button:hover {
  background: var(--btn-default-hover-bg);
}

.subscribe-message {
  margin: 8px 0 0 0;
  font-size: 12px;
  min-height: 16px;
}

/* 移动端适配 */
@media (max-width: 767px) {
  .subscription-widget input[type="email"],
  .subscription-widget button {
    width: 100%;
    border-radius: 4px;
    margin-bottom: 10px;
  }
}